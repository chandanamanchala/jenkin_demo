pipeline {
    agent any

    // Pull code from SCM (Git)
    stages {
        stage('Checkout') {
            steps {
                // If Jenkins job is already configured with Git SCM,
                // this automatically checks out the code
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo "Building project..."
                sh 'echo build commands here'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests..."
                sh 'echo test commands here'
            }
        }

        stage('Deploy') {
            steps {
                echo "Deploying..."
                sh 'echo deploy commands here'
            }
        }
    }
}
